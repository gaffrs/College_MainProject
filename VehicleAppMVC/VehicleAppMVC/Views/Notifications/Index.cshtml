@model IEnumerable<VehicleAppMVC.Models.Notification>

@{
    ViewBag.Title = "Notification List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add Notification", "Create")
</p>

@*Search fields*@
@using (Html.BeginForm())
{
    <p>
        @Html.TextBox("SearchString")
        <input type="submit" value="Search by Title/Type/Year" />
    </p>
    <p>
        @Html.TextBox("StartDate", "Start Date", new { @class = "date-picker" })  @Html.TextBox("FinishDate", "Finish Date", new { @class = "date-picker" })
        <input type="submit" value="Search by Date Range" />
    </p>
}

<table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ApplicationUser)
            </th>
            <th>
                @Html.ActionLink("Notification Title", "Index", new { sortOrder = ViewBag.NameSortParmNotificationTitle })      @*CG: Edited*@
                @*@Html.DisplayNameFor(model => model.NotificationTitle)*@
            </th>
            <th>
                @Html.ActionLink("Notification Type", "Index", new { sortOrder = ViewBag.NameSortParmNotificationType })      @*CG: Edited*@     
                @*@Html.DisplayNameFor(model => model.NotificationType)*@
            </th>
            <th>
                @Html.ActionLink("Notification Date", "Index", new { sortOrder = ViewBag.DateSortParmNotificationDate })      @*CG: Edited*@           
                @*@Html.DisplayNameFor(model => model.NotificationDate)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationSendDate)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationSendDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.NotificationID }) |
                @Html.ActionLink("Details", "Details", new { id=item.NotificationID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.NotificationID })
            </td>
        </tr>
    }

    </table>

