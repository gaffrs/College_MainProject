                @Html.ValidationMessageFor(model => model.CostDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CostOdometerMileage, htmlAttributes: new { @class = "control-label col-md-2" })
