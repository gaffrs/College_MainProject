@model VehicleAppMVC.Models.Fuel

@{
    ViewBag.Title = "Delete Fuel-fill";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete this fuel-fill log?</h3>
<div>
    @*<h4>Fuel</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Vehicle.VehicleRegistrationNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vehicle.VehicleRegistrationNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FuelDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FuelDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FuelOdometerMileage)
            @Model.Vehicle.Consumption[1].ToString()            @*Units*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FuelOdometerMileage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FuelQuantity)
            @Model.Vehicle.Consumption[2].ToString()            @*Units*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FuelQuantity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FuelUnitPrice)
            @Model.Vehicle.Consumption[0].ToString()            @*Units*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FuelUnitPrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FuelPartialFill)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FuelPartialFill)
        </dd>
@*
        <dt>
            @Html.DisplayNameFor(model => model.FuelConsumption)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FuelConsumption)
        </dd>
*@
        <dt>
            @Html.DisplayNameFor(model => model.FuelCost)
            @Model.Vehicle.Consumption[0].ToString()            @*Units*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FuelCost)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to Fuel-fills List", "Index")
        </div>
    }
</div>
